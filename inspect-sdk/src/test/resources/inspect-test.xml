<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:redission="http://redisson.org/schema/redisson"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://redisson.org/schema/redisson http://redisson.org/schema/redisson/redisson.xsd">



    <dubbo:application name="testclient" />
    <!-- 使用per暴露服务地址 -->

    <dubbo:registry address="multicast://224.5.6.7:1234" />

    <dubbo:reference id="inspectService" interface="wanglin.inspect.InspectService" check="false"/>

    <context:component-scan base-package="wanglin.inspect.sdk" />


    <bean id="stringCodec" class="org.redisson.client.codec.StringCodec"/>
    <redission:client id="redission" codec-ref="stringCodec">
        <redission:single-server address="redis://192.168.4.105:6379"
                               connection-pool-size="500"
                                idle-connection-timeout="10000"
                                connect-timeout="10000"
                               timeout="3000"
                               ping-timeout="30000"
                               database="0"/>
    </redission:client>

</beans>